<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicacion 2"
        android:textSize="30sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primer valor"
        android:textSize="20sp"
        android:gravity="left"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pPrimer"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Segundo valor"
        android:textSize="20sp"
        android:gravity="left"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pSegund"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CALCULAR"
        android:textSize="20sp"
        android:id="@+id/pCalcu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total de la operacion"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pTotal"/>
    </LinearLayout>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SUMA"
        android:textSize="20sp"
        android:id="@+id/pSuma"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RESTA"
        android:textSize="20sp"
        android:id="@+id/pResta"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MULTIPLICAR"
        android:textSize="20sp"
        android:id="@+id/pMulti"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DIVIDIR"
        android:textSize="20sp"
        android:id="@+id/pDivi"/>



</LinearLayout>